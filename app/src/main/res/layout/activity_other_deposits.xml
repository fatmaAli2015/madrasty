<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:your_name="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Categories.subCategoriesFinancial.branchesOfSubCat.OtherDepositsActivity">
    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/basic_infbg"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="15">

                <com.example.fatmaali.madrasty.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/confirmBasicInf"
                    android:textColor="@color/colorTextC"
                    android:textSize="15dp"
                    your_name:customFont="bukra_regular.ttf" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recylerViewFinScrolling"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:overScrollMode="never"
                    android:padding="10dp" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:id="@+id/btn_BasicInf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/basic_infbtnbg"
                    android:gravity="center"
                    android:hint="@string/send"
                    android:padding="10dp"
                    android:onClick="OtherDeposits"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="27dp"
                    your_name:customFont="bukra_medium.ttf" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>