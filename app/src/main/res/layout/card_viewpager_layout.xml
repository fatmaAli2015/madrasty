<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:your_name="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearCardViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:layout_weight="4.5"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="4">

                <com.example.fatmaali.madrasty.FontTextView
                    android:id="@+id/TextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2.1"
                    android:gravity="center"
                    android:text="@string/financialCentre"
                    android:textColor="@color/colorWhite"
                    android:textSize="35dp"
                    your_name:customFont="bukra_medium.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorLine" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1.9"
                    android:gravity="center"
                    android:text=" 20 جنية  "
                    your_name:customFont="bukra_medium.ttf"
                    android:textColor="@color/colorWhite"
                    android:textSize="35dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
