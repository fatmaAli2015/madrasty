<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:your_name="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegistrationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:weightSum="19">

                <com.example.fatmaali.madrasty.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#747474"
                    android:text="@string/registratin"
                    android:textSize="15dp"
                    your_name:customFont="bukra_regular.ttf" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="19dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#747474"
                    android:text="@string/registrationText"
                    android:textSize="12dp"
                    your_name:customFont="bukra_regular.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1.5" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/fullName"
                        android:textSize="12dp"
                        your_name:customFont="bukra_regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".1"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1.5" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/userName"
                        android:textSize="11dp"
                        your_name:customFont="bukra_regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".1"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1.5" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/phoneNumber"
                        android:textSize="12dp"
                        your_name:customFont="bukra_regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".1"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1.5" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/password"
                        android:textSize="12dp"
                        your_name:customFont="bukra_regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".1"
                    android:background="@color/colorLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <AutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1.5" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/confirmPassword"
                        android:textSize="11dp"
                        your_name:customFont="bukra_regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".1"
                    android:background="@color/colorLine" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:gravity="center"
                    android:textSize="15dp"
                    your_name:customFont="bukra_regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/butlogin"
                    android:text="@string/registratin"
                    android:textColor="@color/colorWhite" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:textSize="11dp"
                    your_name:customFont="bukra_regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/loginWays"
                    android:textColor="@color/colorLoginWays" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="6.2">

                    <com.example.fatmaali.madrasty.FontTextView
                        android:textSize="11dp"
                        your_name:customFont="bukra_regular.ttf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/google"
                        android:textColor="@color/google" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".1"
                        android:background="@color/colorLine" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:textSize="11dp"
                        your_name:customFont="bukra_regular.ttf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/facebook"
                        android:textColor="@color/facebook" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".1"
                        android:background="@color/colorLine" />

                    <com.example.fatmaali.madrasty.FontTextView
                        android:textSize="11dp"
                        your_name:customFont="bukra_regular.ttf"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/tweeter"
                        android:textColor="@color/tweeter" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:weightSum="3">

                <com.example.fatmaali.madrasty.FontTextView
                    android:textSize="11dp"
                    your_name:customFont="bukra_medium.ttf"
                    android:id="@+id/login"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="@string/clickHere"
                    android:textColor="@color/facebook" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:textSize="11dp"
                    your_name:customFont="bukra_medium.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:paddingLeft="8dp"
                    android:gravity="center|left"
                    android:text="@string/ok"
                    android:textColor="@color/facebook" />

                <com.example.fatmaali.madrasty.FontTextView
                    android:textSize="11dp"
                    your_name:customFont="bukra_regular.ttf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:text="@string/questionOfRegistration"
                    android:textColor="@color/registration" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</FrameLayout>